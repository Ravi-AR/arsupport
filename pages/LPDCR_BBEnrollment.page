                </div>
                 </div><!--end row--> 
                   
            </div><!--End:Container-->
            
           
        </apex:define>
    </apex:composition>
    </apex:form>
    
     <script>
            $('.collapse').on('shown.bs.collapse', function(){
            $(this).parent().find(".glyphicon-plus").removeClass("glyphicon-plus").addClass("glyphicon-minus");
            }).on('hidden.bs.collapse', function(){
            $(this).parent().find(".glyphicon-minus").removeClass("glyphicon-minus").addClass("glyphicon-plus");
            });
            
             $('.btn[data-radio-name]').click(function() {
                $('.btn[data-radio-name="'+$(this).data('radioName')+'"]').removeClass('active');
                $('input[name="'+$(this).data('radioName')+'"]').val(
                    $(this).text()
                );
            });
            
            $('.btn[data-checkbox-name]').click(function() {
                $('input[name="'+$(this).data('checkboxName')+'"]').val(
                    $(this).hasClass('active') ? 0 : 1
                );
            });
            
           

            </script>
            
<style>
    .messageText{
        color:#cc262c;
        font-size:18px;
        margin-bottom:10px;
    }
    .btn_SubEn{margin: 0 auto 10px; }
    .errmsg{text-align: center; margin: 0px auto 10px; font-weight:normal}
</style>
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script>
    $(document).ready(function($) {
         
          $(".Sw1").click(function(){
               if ($(this).is(':checked')) {               
                    $('.readonly').prop('readonly', false);                
                 }               
               else if ($(this).not(':checked')) {   
                   $('.readonly').prop('readonly', true); 
                    $('.readonly').val(0);                      
               }           
         });  
         
         
        
          $(".Sw2").click(function(){
               if ($(this).is(':checked')) {               
                    $('.readonly1').prop('readonly', false); 
                                 
                 }               
               else if ($(this).not(':checked')) {   
                   $('.readonly1').prop('readonly', true); 
                    $('.readonly1').val(0);                     
               }           
         }); 
         
         $('.errmsg').hide();
         $('.errmsg1').hide();
         
         $(".readonly, .readonly1").keypress(function (e) {            
             if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {               
                $(".errmsg").show().fadeOut(10000);
                       return false;
            }
       });  
       
       
    });
    
    
</script>

     <script>
     $(document).ready(function(){
      $('#bb').addClass("myactive");
      $('#mbb').addClass("mobactive");
    });
 </script>       
            

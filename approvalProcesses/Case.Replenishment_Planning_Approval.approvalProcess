            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Alternate Approver for Replenishment Planning</description>
        <entryCriteria>
            <formula>NOT(  ISBLANK( Alternate_Approver__c ) )</formula>

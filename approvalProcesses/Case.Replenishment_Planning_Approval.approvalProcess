            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>COR Approval Replenishment $0-100</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Credit_Amount_Range__c</field>
                <operation>equals</operation>
                <value>$0 - $100</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Replenishment Credit $0-$100</label>
        <name>COR_Approval_Replenishment</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
